{
  "name": "erland.me",
  "type": "module",
  "version": "1.0.0",
  "scripts": {
    "predev": "npm run generate:robots",
    "dev": "astro dev",
    "start": "astro dev",
    "build": "npm run generate:robots && npm run generate:ads && npm run generate:search && astro build",
    "build:clean": "rm -rf dist && npm run generate:robots && npm run generate:ads && npm run generate:search && astro build",
    "preview": "astro preview",
    "astro": "astro",
    "lint": "astro check",
    "lint:fix": "astro check --fix",
    "type-check": "astro check --only=types",
    "format": "prettier --write .",
    "format:check": "prettier --check .",
    "validate": "npm run lint && npm run type-check && npm run format:check",
    "generate:robots": "node --loader ts-node/esm scripts/generate-robots.ts",
    "generate:robots:ts-node": "node --loader ts-node/esm scripts/generate-robots.ts",
    "generate:robots:bun": "bun scripts/generate-robots.ts",
    "generate:ads": "node --loader ts-node/esm scripts/generate-ads.ts",
    "generate:search": "node --loader ts-node/esm scripts/generate-search-index.ts"
  },
  "dependencies": {
    "astro": "^5.1.5",
    "fuse.js": "^7.1.0",
    "sharp": "^0.34.4"
  },
  "devDependencies": {
    "@astrojs/check": "^0.9.4",
    "@astrojs/sitemap": "^3.6.0",
    "@types/node": "^24.5.2",
    "autoprefixer": "^10.4.21",
    "cssnano": "^7.1.1",
    "prettier": "^3.6.2",
    "remark-directive": "^4.0.0",
    "terser": "^5.44.0",
    "ts-node": "^10.9.2",
    "typescript": "^5.9.2",
    "unist-util-visit": "^5.0.0"
  }
}
