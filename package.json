{
  "name": "erland.me",
  "type": "module",
  "version": "1.0.0",
  "scripts": {
    "predev": "npm run generate:robots && npm run generate:ads && npm run generate:search",
    "dev": "astro dev",
    "start": "astro dev",
    "build": "npm run generate:robots && npm run generate:ads && npm run generate:search && astro build && npm run generate:sitemap",
    "build:clean": "rm -rf dist && npm run generate:robots && npm run generate:ads && npm run generate:search && astro build && npm run generate:sitemap",
    "preview": "astro preview",
    "astro": "astro",
    "lint": "astro check",
    "lint:fix": "astro check --fix",
    "type-check": "astro check --only=types",
    "format": "prettier --write .",
    "format:check": "prettier --check .",
    "validate": "npm run lint && npm run type-check && npm run format:check",
    "generate:robots": "node scripts/generate-robots.mjs",
    "generate:ads": "node scripts/generate-ads.mjs",
    "generate:search": "node scripts/generate-search-index.mjs",
    "generate:sitemap": "node scripts/generate-sitemap.mjs"
  },
  "engines": {
    "node": ">=22.18.0",
    "npm": ">=10.9.0"
  },
  "dependencies": {
    "astro": "^5.15.1",
    "fuse.js": "^7.1.0",
    "gray-matter": "^4.0.3",
    "sharp": "^0.34.4",
    "web-vitals": "^5.1.0"
  },
  "devDependencies": {
    "@astrojs/check": "^0.9.5",
    "@types/node": "^24.5.2",
    "autoprefixer": "^10.4.21",
    "cssnano": "^7.1.1",
    "prettier": "^3.6.2",
    "remark-directive": "^4.0.0",
    "terser": "^5.44.0",
    "typescript": "^5.9.2",
    "unist-util-visit": "^5.0.0"
  }
}
