---
/**
 * BackNav Component
 * 
 * Renders a "Back" navigation button with an arrow icon.
 * Used at the top of detail pages to navigate back to listing pages.
 * 
 * @component
 * @example
 * <BackNav href="/blog/" label="Back to Blog" />
 * 
 * @param {Object} props
 * @param {string} props.href - URL to navigate back to (absolute or relative path)
 * @param {string} [props.label="Back"] - Button label text (default: "Back")
 */
import Icon from '@components/Icon.astro';
import styles from './back-nav.module.css';

interface Props {
  href: string;
  label?: string;
}

const { href, label = 'Back' } = Astro.props as Props;
---

<div class={styles["back-nav-container"]}>
  <a href={href} class:list={[styles["back-nav-button"], 'w-inline-block']}>
    <Icon name="btnBack" class={styles["back-nav-img"]} />
    <div>{label}</div>
  </a>
  
</div>
