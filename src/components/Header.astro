---
/**
 * Header Component
 * 
 * Comprehensive HTML <head> manager with SEO, analytics, and performance optimizations.
 * Generates meta tags, JSON-LD structured data, and loads critical third-party scripts.
 * 
 * Features:
 * - Complete Open Graph and Twitter Card meta tags
 * - JSON-LD structured data (website + custom schemas)
 * - Google Tag Manager integration (production only)
 * - Google AdSense integration (production only)
 * - Ahrefs Analytics integration (production only)
 * - Font preloading and optimization
 * - Favicon and web app manifest
 * - Canonical URLs and pagination links
 * - Astro View Transitions support
 * - Critical theme/sidebar initialization
 * 
 * @component
 * @example
 * <Header 
 *   title="Page Title | Site Name"
 *   description="Page description for SEO"
 *   canonical="https://example.com/page/"
 *   image="https://example.com/og-image.jpg"
 *   type="article"
 *   publishedTime={new Date()}
 *   preloadSearch={true}
 * />
 * 
 * @param {Object} props
 * @param {string} props.title - Page title (used for <title> and meta tags)
 * @param {string} [props.canonical] - Canonical URL (auto-generated if not provided)
 * @param {string} [props.prevHref] - Previous page URL for pagination (link rel="prev")
 * @param {string} [props.nextHref] - Next page URL for pagination (link rel="next")
 * @param {any} [props.jsonLd] - Custom JSON-LD structured data object (optional)
 * @param {string} [props.description] - Meta description for SEO
 * @param {string} [props.image] - OG image URL (absolute)
 * @param {"website" | "article" | "profile"} [props.type="website"] - Open Graph type
 * @param {Date | string} [props.publishedTime] - Article published time (ISO 8601 or Date)
 * @param {Date | string} [props.modifiedTime] - Article modified time (ISO 8601 or Date)
 * @param {string[]} [props.tags] - Article tags/keywords array
 * @param {string} [props.author] - Article author name
 * @param {boolean} [props.preloadSearch=false] - Preload search index JSON (for blog listing pages)
 */
import { generateMetaTags, websiteJsonLd, isProductionSite } from '@lib/seo';
import { GTM_ID, ADSENSE_CLIENT, AHREFS_DATA_KEY } from '@lib/env';
import { ClientRouter } from 'astro:transitions';
import CriticalInit from './CriticalInit.astro';

interface HeaderProps {
  title: string;
  canonical?: string;
  prevHref?: string;
  nextHref?: string;
  jsonLd?: any;
  description?: string;
  image?: string;
  type?: 'website' | 'article' | 'profile';
  publishedTime?: Date | string;
  modifiedTime?: Date | string;
  tags?: string[];
  author?: string;
  preloadSearch?: boolean;
}
const {
  title,
  canonical,
  prevHref,
  nextHref,
  jsonLd,
  description,
  image,
  type = 'website',
  publishedTime,
  modifiedTime,
  tags,
  author,
  preloadSearch = false,
} = Astro.props as HeaderProps;

// Generate comprehensive meta tags
const metaTags = generateMetaTags({
  title,
  description,
  canonical,
  image,
  type,
  publishedTime,
  modifiedTime,
  tags,
  author
});

// Add website schema to all pages
const websiteSchema = websiteJsonLd();

const enableGTM = import.meta.env.PROD && isProductionSite() && Boolean(GTM_ID);
const enableAdsense = import.meta.env.PROD && isProductionSite() && Boolean(ADSENSE_CLIENT);
const enableAhrefs = import.meta.env.PROD && isProductionSite() && Boolean(AHREFS_DATA_KEY);

// Minified GTM snippet with server-side GTM_ID interpolation
const gtmSnippet = `!function(w,d,s,l,i){w[l]=w[l]||[];w[l].push({'gtm.start':+new Date,event:'gtm.js'});var f=d.getElementsByTagName(s)[0],j=d.createElement(s),dl=l!='dataLayer'?'&l='+l:'';j.async=!0,j.src='https://www.googletagmanager.com/gtm.js?id='+i+dl,f.parentNode.insertBefore(j,f)}(window,document,'script','dataLayer','${GTM_ID}');`;
---

<head>
  <!-- Basic Meta Tags -->
  <meta http-equiv="Content-Type" content="text/html; charset=UTF-8" />
  <meta name="viewport" content="width=device-width, initial-scale=1" />
  <title>{metaTags.title}</title>
  <meta name="generator" content={Astro.generator} />
  
  <!-- Theme & App Configuration -->
  <meta name="theme-color" content="#428dff" />
  <meta name="msapplication-TileColor" content="#428dff" />
  <meta name="color-scheme" content="dark light" />
  <meta name="mobile-web-app-capable" content="yes" />
  <meta name="apple-mobile-web-app-title" content={metaTags.title} />
  <meta name="apple-mobile-web-app-status-bar-style" content="black-translucent" />
  
  <!-- SEO Meta Tags -->
  <meta name="description" content={metaTags.description} />
  <meta name="author" content="Erland" />
  <meta name="robots" content={isProductionSite() ? 'index, follow, max-snippet:-1, max-image-preview:large' : 'noindex, nofollow'} />
  
  <!-- Open Graph Meta Tags - For social media sharing (Facebook, LinkedIn, etc.) -->
  <meta property="og:title" content={metaTags.openGraph.title} />
  <meta property="og:description" content={metaTags.openGraph.description} />
  <meta property="og:url" content={metaTags.openGraph.url} />
  <meta property="og:type" content={metaTags.openGraph.type} />
  <meta property="og:image" content={metaTags.openGraph.image} />
  {metaTags.openGraph.imageAlt && (
    <meta property="og:image:alt" content={metaTags.openGraph.imageAlt} />
  )}
  <meta property="og:site_name" content={metaTags.openGraph.siteName} />
  <meta property="og:locale" content={metaTags.openGraph.locale} />
  
  <!-- Article-Specific Open Graph Tags (for blog posts) -->
  {metaTags.openGraph.publishedTime && <meta property="article:published_time" content={metaTags.openGraph.publishedTime} />}
  {metaTags.openGraph.modifiedTime && <meta property="article:modified_time" content={metaTags.openGraph.modifiedTime} />}
  {metaTags.openGraph.tags && metaTags.openGraph.tags.map(tag => <meta property="article:tag" content={tag} />)}
  {metaTags.openGraph.authors && metaTags.openGraph.authors.map(author => <meta property="article:author" content={author} />)}
  
  <!-- Twitter Card Meta Tags - For Twitter/X sharing -->
  <meta name="twitter:card" content={metaTags.twitter.card} />
  <meta name="twitter:title" content={metaTags.twitter.title} />
  <meta name="twitter:description" content={metaTags.twitter.description} />
  <meta name="twitter:image" content={metaTags.twitter.image} />
  {metaTags.twitter.imageAlt && (
    <meta name="twitter:image:alt" content={metaTags.twitter.imageAlt} />
  )}
  <meta name="twitter:creator" content={metaTags.twitter.creator} />
  <meta name="twitter:site" content={metaTags.twitter.site} />
  
  <!-- DNS Prefetch & Preconnect - Performance optimization for external resources -->
  <link rel="preconnect" href="https://asset.erland.me" crossorigin />
  <link rel="preconnect" href="https://fonts.googleapis.com">
  <link rel="preconnect" href="https://fonts.gstatic.com" crossorigin>
  
  <!-- Google Tag Manager Preconnect (production only) -->
  {enableGTM && (
    <>
      <link rel="preconnect" href="https://www.googletagmanager.com">
      <link rel="dns-prefetch" href="https://www.googletagmanager.com">
    </>
  )}
  
  <!-- Google AdSense Preconnect (production only) -->
  {enableAdsense && (
    <>
      <link rel="preconnect" href="https://pagead2.googlesyndication.com">
      <link rel="preconnect" href="https://adservice.google.com">
      <link rel="dns-prefetch" href="https://pagead2.googlesyndication.com">
      <link rel="dns-prefetch" href="https://adservice.google.com">
    </>
  )}
  
  <!-- Ahrefs Analytics Preconnect (production only) -->
  {enableAhrefs && (
    <>
      <link rel="preconnect" href="https://analytics.ahrefs.com">
      <link rel="dns-prefetch" href="https://analytics.ahrefs.com">
    </>
  )}
  
  <!-- Font Preloading - Optimize font loading performance -->
  <link rel="preload" href="/fonts/agave-nerd/AgaveNerdFontMono-Regular.woff2" as="font" type="font/woff2" crossorigin>
  <link href="https://fonts.googleapis.com/css2?family=Albert+Sans:ital,wght@0,300..900;1,300..900&display=swap" rel="stylesheet" />
  
  <!-- Search Index Preload - For blog/download listing pages with client-side search -->
  {preloadSearch && (<link rel="preload" as="fetch" href="/search-index.json" type="application/json" crossorigin />)}
  
  <!-- Canonical & Pagination Links - SEO optimization -->
  <link rel="canonical" href={metaTags.canonical} />
  {prevHref && <link rel="prev" href={prevHref} />}
  {nextHref && <link rel="next" href={nextHref} />}
  
  <!-- Favicons & Web App Manifest -->
  <link rel="apple-touch-icon" href="/assets/favicon/apple-touch-icon.png" />
  <link rel="icon" type="image/png" sizes="32x32" href="/assets/favicon/favicon-32x32.png" />
  <link rel="icon" type="image/png" sizes="16x16" href="/assets/favicon/favicon-16x16.png" />
  <link rel="shortcut icon" href="/assets/favicon/favicon.ico" />
  <link rel="manifest" href="/assets/favicon/site.webmanifest" />
  
  <!-- JSON-LD Structured Data - Schema.org markup for search engines -->
  <!-- Website Schema - Always included -->
  <script type="application/ld+json" is:inline set:html={JSON.stringify(websiteSchema)} />
  <!-- Custom Schema - Page-specific (e.g., BlogPosting, BreadcrumbList) -->
  {jsonLd && (
    <script type="application/ld+json" is:inline set:html={JSON.stringify(jsonLd)} />
  )}
  
  <!-- Third-Party Analytics & Tracking Scripts (production only) -->
  <!-- Google Tag Manager -->
  {enableGTM && (
    <script is:inline set:html={gtmSnippet} />
  )}
  
  <!-- Google AdSense -->
  {enableAdsense && (
    <Fragment set:html={`<script async src="https://pagead2.googlesyndication.com/pagead/js/adsbygoogle.js?client=${ADSENSE_CLIENT}" crossorigin="anonymous"></script>`} />
  )}
  
  <!-- Ahrefs Web Analytics -->
  {enableAhrefs && (
    <Fragment set:html={`<script async src="https://analytics.ahrefs.com/analytics.js" data-key="${AHREFS_DATA_KEY}"></script>`} />
  )}
  
  <!-- Astro View Transitions Router - Enable SPA-like navigation -->
  <ClientRouter fallback="swap" />
  
  <!-- Critical Inline Scripts - Theme initialization and sidebar state management -->
  <CriticalInit />
</head>
