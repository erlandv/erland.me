---
import { Image } from "astro:assets";
import type { ImageMetadata } from "astro";

interface Props {
  image: ImageMetadata;
  alt: string;
  loading?: "eager" | "lazy";
  sizes?: string;
  widths?: number[];
}

/**
 * HeroImage: pembungkus Astro Image untuk hero dengan kelas img "hero-image"
 * - Menjaga styling global .hero-image dan perilaku lightbox skip.
 * - Default widths: mengikuti clamp width di CSS global .hero-image
 * - Default sizes: layout hero di blog (desktop 45vw, mobile 60vw)
 */
const {
  image,
  alt,
  loading = "eager",
  sizes = "(max-width: 640px) 60vw, 45vw",
  widths = [220, 320, 480],
} = Astro.props as Props;
---

<Image
  src={image}
  alt={alt}
  loading={loading}
  widths={widths}
  sizes={sizes}
  class="hero-image"
/>