---
import { Image } from "astro:assets";
import type { ImageMetadata } from "astro";
import "../styles/components/hero.css";

interface Props {
  image: ImageMetadata;
  alt: string;
  loading?: "eager" | "lazy";
  sizes?: string;
  widths?: number[];
}

const {
  image,
  alt,
  loading = "eager",
  sizes = "(max-width: 640px) 60vw, 45vw",
  widths = [220, 320, 480],
} = Astro.props as Props;
---

<Image
  src={image}
  alt={alt}
  loading={loading}
  widths={widths}
  sizes={sizes}
  class="hero-image"
/>
