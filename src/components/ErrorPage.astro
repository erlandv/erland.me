---
/**
 * ErrorPage Component
 *
 * Reusable layout for error pages (403, 404, etc).
 * Provides consistent styling for error messages and action buttons.
 *
 * @component
 * @example
 * <ErrorPage
 *   title="404"
 *   subtitle="Page Not Found"
 *   description="The page you are looking for does not exist."
 * >
 *   <div slot="icon">...</div>
 *   <div slot="actions">...</div>
 * </ErrorPage>
 */
import Header from '@components/Header.astro';
import fold from '@/styles/components/fold.module.css';
import err from '@/styles/components/error.module.css';
import '@/styles/layout/base.css';
import '@/styles/prose/typography.css';
import '@/styles/variables.css';
import '@/styles/layout/site-layout.css';

interface Props {
  title: string;
  subtitle: string;
  description: string;
  metaTitle: string;
  metaDescription: string;
}

const { title, subtitle, description, metaTitle, metaDescription } =
  Astro.props;
---

<!doctype html>
<html lang='id'>
  <Header title={metaTitle} description={metaDescription} />
  <body>
    <div class='content'>
      <nav class={`main ${err['error-page-layout']}`}>
        <div class={`container ${err['error-container']}`}>
          <main class={fold['fold-content-container']}>
            <div class={fold['fold-content']}>
              <div class={err['error-content']}>
                <div class={err['error-icon']}>
                  <slot name='icon' />
                </div>
                <h1 class={err['error-title']}>{title}</h1>
                <h2 class={err['error-subtitle']}>{subtitle}</h2>
                <p class={err['error-description']}>
                  {description}
                </p>
                <div class={err['error-actions']}>
                  <slot name='actions' />
                </div>
              </div>
            </div>
          </main>
        </div>
      </nav>
    </div>
  </body>
</html>
