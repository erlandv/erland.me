---
import SiteLayout from '../layouts/SiteLayout.astro';
import Icon from '../components/Icon.astro';
import BackNav from '../components/BackNav.astro';
import pf from '../styles/pages/portfolio.module.css';
import fold from '../styles/pages/fold.module.css';
import chips from '../styles/pages/chips.module.css';
---

<SiteLayout
  title='Portfolio'
  canonical='/portfolio/'
  selectedItem='portfolio'
  description='Explore projects across web, cloud, and side gigs, a snapshot of what I have built and learned. I deliver end-to-end builds with uptime-first architectures and lean cloud costs.'
>
  <BackNav href='/' label='Back' />
  <main class={fold['fold-content-container']}>
    <div class={fold['fold-content']}>
      <h1>Portfolio</h1>
      <p class={fold['lead']}>
        Explore projects across web, cloud, and side gigs, a snapshot of what
        I've built and learned. I deliver end-to-end builds with uptime-first
        architectures and lean cloud costs.
      </p>
    </div>
  </main>
  <div class={pf['projects-section']}>
    <div class={pf['projects-container']}>
      <div class={pf['single-projects-category']}>
        <div class={pf['projects-category-image-container']}>
          <Icon name='browser' class='projects-category-image' />
        </div>
      </div>
      <div class={pf['single-projects-content']}>
        <h3><a href='/portfolio/web-development/'>Web Development</a></h3>
        <div class='tech-tools-container'>
          <div class:list={[chips['mini-label-white'], chips['gray-color']]}>
            Technologies &amp; tools
          </div>
          <div class:list={[chips['chips-container'], chips['chips-container-small-width']]}>
            <div class:list={[chips['single-chip'], chips['small-chip']]}>Node.js</div>
            <div class:list={[chips['single-chip'], chips['small-chip']]}>TypeScript</div>
            <div class:list={[chips['single-chip'], chips['small-chip']]}>Next.js</div>
            <div class:list={[chips['single-chip'], chips['small-chip']]}>React</div>
            <div class:list={[chips['single-chip'], chips['small-chip']]}>Tailwind CSS</div>
            <div class:list={[chips['single-chip'], chips['small-chip']]}>PostgreSQL</div>
            <div class:list={[chips['single-chip'], chips['small-chip']]}>Vite</div>
            <div class:list={[chips['single-chip'], chips['small-chip']]}>Git</div>
          </div>
        </div>
      </div>
    </div>
    <div class={pf['projects-container']}>
      <div class={pf['single-projects-category']}>
        <div class={pf['projects-category-image-container'] + ' devops-img'}>
          <Icon name='database' class='projects-category-image' />
        </div>
      </div>
      <div class={pf['single-projects-content']}>
        <h3><a href='/portfolio/cloud-infra/'>Cloud Infra</a></h3>
        <div class='tech-tools-container'>
          <div class:list={[chips['mini-label-white'], chips['gray-color']]}>
            Technologies &amp; tools
          </div>
          <div class:list={[chips['chips-container'], chips['chips-container-small-width']]}>
            <div class:list={[chips['single-chip'], chips['small-chip']]}>Terraform</div>
            <div class:list={[chips['single-chip'], chips['small-chip']]}>Docker</div>
            <div class:list={[chips['single-chip'], chips['small-chip']]}>Kubernetes</div>
            <div class:list={[chips['single-chip'], chips['small-chip']]}>Bash</div>
            <div class:list={[chips['single-chip'], chips['small-chip']]}>Github Actions</div>
            <div class:list={[chips['single-chip'], chips['small-chip']]}>AWS</div>
            <div class:list={[chips['single-chip'], chips['small-chip']]}>Azure</div>
            <div class:list={[chips['single-chip'], chips['small-chip']]}>GCP</div>
          </div>
        </div>
      </div>
    </div>
    <div class={pf['projects-container']}>
      <div class={pf['single-projects-category']}>
        <div class={pf['projects-category-image-container']}>
          <Icon name='personal' class='projects-category-image' />
        </div>
      </div>
      <div class={pf['single-projects-content']}>
        <h3><a href='/portfolio/personal-projects/'>Personal Projects</a></h3>
        <div class='tech-tools-container'>
          <div class:list={[chips['mini-label-white'], chips['gray-color']]}>
            Technologies &amp; tools
          </div>
          <div class:list={[chips['chips-container'], chips['chips-container-small-width']]}>
            <div class:list={[chips['single-chip'], chips['small-chip']]}>Nginx</div>
            <div class:list={[chips['single-chip'], chips['small-chip']]}>Apache</div>
            <div class:list={[chips['single-chip'], chips['small-chip']]}>Redis</div>
            <div class:list={[chips['single-chip'], chips['small-chip']]}>PHP</div>
            <div class:list={[chips['single-chip'], chips['small-chip']]}>CSS</div>
            <div class:list={[chips['single-chip'], chips['small-chip']]}>JavaScript</div>
            <div class:list={[chips['single-chip'], chips['small-chip']]}>MySQL</div>
            <div class:list={[chips['single-chip'], chips['small-chip']]}>MariaDB</div>
            <div class:list={[chips['single-chip'], chips['small-chip']]}>Certbot</div>
          </div>
        </div>
      </div>
    </div>
  </div>
</SiteLayout>
