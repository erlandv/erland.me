---
import ErrorPage from '@components/ErrorPage.astro';
import Icon from '@components/Icon.astro';
import { PAGE_METADATA } from '@lib/content/page-metadata';

Astro.response.status = 403;
---

<ErrorPage
  errorCode='403'
  errorTitle='Access Forbidden'
  errorMessage="Bro, enough internet for today. Go home, you're drunk. Let's find your way back."
  title={PAGE_METADATA.forbidden.title}
  description={PAGE_METADATA.forbidden.description}
>
  <Icon slot='icon' name='error403' />
</ErrorPage>
