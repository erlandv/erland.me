---
import SiteLayout from '@layouts/SiteLayout.astro';
import BackNav from '@components/BackNav/BackNav.astro';
import { PAGE_METADATA } from '@lib/content/page-metadata';
import fold from '@/styles/components/fold.module.css';
---

<SiteLayout
  title={PAGE_METADATA.offline.title}
  canonical='/offline/'
  description={PAGE_METADATA.offline.description}
  showSidebar={true}
>
  <BackNav href='/' />
  <main class={fold['fold-content-container']}>
    <div class={fold['fold-content']}>
      <h1>You're Offline</h1>

      <p>
        Looks like your internet took a quick break. No worries, some pages you
        opened before are still here for you.
      </p>

      <h2>Try this:</h2>
      <ul>
        <li>Check your Wi-Fi or data</li>
        <li>Refresh the page once you're back online</li>
        <li>Open pages you've visited earlier (they're saved in cache)</li>
      </ul>

      <p>
        This site keeps previously opened pages available offline. When your
        connection returns, everything will be back to normal.
      </p>
    </div>
  </main>
</SiteLayout>
