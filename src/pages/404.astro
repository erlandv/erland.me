---
import Header from "../components/Header.astro";
import Icon from "../components/Icon.astro";
---

<!DOCTYPE html>
<html>
  <Header
    title="404 - Page Not Found"
    canonical="/404/"
    description="Page Not Found! That path doesn't exist, but your journey still does. Let's find your way back."
  />
  <body>
    <div class="content">
      <nav class="main">
        <div class="container">
          <main class="fold-content-container">
            <div class="fold-content">
              <div class="error-content">
                <div class="error-icon">
                  <div class="error-icon-svg">!</div>
                </div>
                <h1 class="error-title">404</h1>
                <h2 class="error-subtitle">Page Not Found</h2>
                <p class="error-description">
                  That path doesn't exist, but your journey still does.
                  Let's find your way back.
                </p>
                <div class="error-actions">
                  <a href="/" class="button w-button homepage-button">
                    <Icon name="home" class="button-icon" />
                    <span>Take Me Home</span>
                  </a>
                  <a href="javascript:history.back()" class="button w-button secondary-button">
                    <Icon name="back" class="button-icon" />
                    <span>Go Back</span>
                  </a>
                </div>
              </div>
            </div>
          </main>
        </div>
      </nav>
    </div>    
  </body>
</html>

<style>
  .error-content {
    text-align: center;
    max-width: 600px;
    margin: 0 auto;
    padding: 2rem 1rem;
  }

  .error-icon {
    margin-bottom: 2rem;
  }

  .error-icon-svg {
    width: 80px;
    height: 80px;
    color: #6bb6ff;
    opacity: 0.8;
    font-size: 3rem;
    font-weight: bold;
    display: flex;
    align-items: center;
    justify-content: center;
    border: 3px solid #6bb6ff;
    border-radius: 50%;
    margin: 0 auto;
    background: rgba(107, 182, 255, 0.1);
  }

  .error-title {
    font-size: 6rem;
    font-weight: 700;
    color: #6bb6ff;
    margin: 0 0 1rem 0;
    line-height: 1;
    text-shadow: 0 0 20px rgba(107, 182, 255, 0.3);
  }

  .error-subtitle {
    font-size: 2rem;
    font-weight: 600;
    color: #ffffff;
    margin: 0 0 1.5rem 0;
    line-height: 1.2;
  }

  .error-description {
    font-size: 1.1rem;
    color: #cccccc;
    margin: 0 0 3rem 0;
    line-height: 1.6;
    max-width: 500px;
    margin-left: auto;
    margin-right: auto;
  }

  .error-actions {
    display: flex;
    gap: 1rem;
    justify-content: center;
    flex-wrap: wrap;
  }

  .homepage-button {
    background: linear-gradient(135deg, #6bb6ff 0%, #4a9eff 100%);
    color: #ffffff;
    border: none;
    padding: 12px 24px;
    border-radius: 8px;
    font-weight: 600;
    font-size: 1rem;
    text-decoration: none;
    display: inline-flex;
    align-items: center;
    gap: 8px;
    transition: all 0.3s ease;
    box-shadow: 0 4px 15px rgba(107, 182, 255, 0.3);
  }

  .homepage-button:hover {
    background: linear-gradient(135deg, #4a9eff 0%, #3a8eef 100%);
    transform: translateY(-2px);
    box-shadow: 0 6px 20px rgba(107, 182, 255, 0.4);
    color: #ffffff;
  }

  .secondary-button {
    background: transparent;
    color: #6bb6ff;
    border: 2px solid #6bb6ff;
    padding: 10px 22px;
    border-radius: 8px;
    font-weight: 600;
    font-size: 1rem;
    text-decoration: none;
    display: inline-flex;
    align-items: center;
    gap: 8px;
    transition: all 0.3s ease;
  }

  .secondary-button:hover {
    background: #6bb6ff;
    color: #ffffff;
    transform: translateY(-2px);
    box-shadow: 0 4px 15px rgba(107, 182, 255, 0.3);
  }

  .button-icon {
    width: 18px;
    height: 18px;
  }

  /* Responsive design */
  @media (max-width: 768px) {
    .error-title {
      font-size: 4rem;
    }

    .error-subtitle {
      font-size: 1.5rem;
    }

    .error-description {
      font-size: 1rem;
    }

    .error-actions {
      flex-direction: column;
      align-items: center;
    }

    .homepage-button,
    .secondary-button {
      width: 100%;
      max-width: 280px;
      justify-content: center;
    }
  }

  @media (max-width: 480px) {
    .error-content {
      padding: 1rem 0.5rem;
    }

    .error-title {
      font-size: 3rem;
    }

    .error-subtitle {
      font-size: 1.25rem;
    }
  }
</style>
