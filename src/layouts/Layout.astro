---
interface Props {
	title: string;
}

const { title } = Astro.props;
---

<!doctype html>
<html lang="en">
	<head>
		<meta charset="UTF-8" />
		<meta name="description" content="Astro description" />
		<meta name="viewport" content="width=device-width" />
		<link rel="icon" type="image/svg+xml" href="/favicon.svg" />
		<meta name="generator" content={Astro.generator} />
		<title>{title}</title>
		
		<!-- Debug and robust sidebar state management -->
		<script>
			// Enhanced debugging and multiple fallback approach
			(function() {
				const STORAGE_KEY = 'sidebar-collapsed';
				const DEBUG = true; // Set to true for debugging
				
			function log(msg: any) {
				if (DEBUG) console.log('[Sidebar Debug]', msg);
			}
			
			function applySidebarState(isCollapsed: boolean) {
					log('Applying state: ' + isCollapsed);
					
					if (isCollapsed) {
						document.documentElement.classList.add('sidebar-collapsed-global');
						document.documentElement.setAttribute('data-sidebar', 'collapsed');
						document.body.classList.add('sidebar-collapsed');
					} else {
						document.documentElement.classList.remove('sidebar-collapsed-global');
						document.documentElement.setAttribute('data-sidebar', 'expanded');
						document.body.classList.remove('sidebar-collapsed');
					}
				}
				
				try {
					// Multiple storage strategies
					let savedState = null;
					
					// Try localStorage first
					if (typeof localStorage !== 'undefined') {
						savedState = localStorage.getItem(STORAGE_KEY);
					log('localStorage value: ' + savedState);
				}
				
				// Fallback to sessionStorage
				if (!savedState && typeof sessionStorage !== 'undefined') {
					savedState = sessionStorage.getItem(STORAGE_KEY);
					log('sessionStorage value: ' + savedState);
				}
				
				// Fallback to cookie
				if (!savedState) {
					const cookies = document.cookie.split(';');
					for (let cookie of cookies) {
						const [name, value] = cookie.trim().split('=');
						if (name === STORAGE_KEY) {
							savedState = value;
							log('cookie value: ' + savedState);
							break;
						}
					}
				}
				
				const isCollapsed = savedState === 'true';
				log('Final state decision: ' + isCollapsed);
					
					applySidebarState(isCollapsed);
					
			} catch (error: any) {
				log('Error: ' + error.message);
					// Default to expanded if all fails
					applySidebarState(false);
				}
			})();
		</script>
	</head>
	<body>
		<slot />
	</body>
</html>
<style is:global>
	:root {
		--accent: 136, 58, 234;
		--accent-light: 224, 204, 250;
		--accent-dark: 49, 10, 101;
		--accent-gradient: linear-gradient(
			45deg,
			rgb(var(--accent)),
			rgb(var(--accent-light)) 30%,
			white 60%
		);
		
		/* Sidebar state management via CSS custom properties */
		--sidebar-collapsed: 0; /* Default: expanded */
		--sidebar-width-expanded: 280px;
		--sidebar-width-collapsed: 80px;
		--sidebar-width: var(--sidebar-width-expanded); /* Default */
	}
	
	/* Global sidebar state management - multiple selectors for reliability */
	html.sidebar-collapsed-global,
	html[data-sidebar="collapsed"],
	body.sidebar-collapsed {
		--sidebar-collapsed: 1;
		--sidebar-width: var(--sidebar-width-collapsed);
	}
	
	/* Instant sidebar styling - multiple selectors */
	html.sidebar-collapsed-global .sidebar,
	html[data-sidebar="collapsed"] .sidebar,
	body.sidebar-collapsed .sidebar {
		width: var(--sidebar-width-collapsed) !important;
		padding: 20px 8px !important;
	}
	
	html.sidebar-collapsed-global .sidebar .label-white,
	html.sidebar-collapsed-global .sidebar .label-gray,
	html[data-sidebar="collapsed"] .sidebar .label-white,
	html[data-sidebar="collapsed"] .sidebar .label-gray,
	body.sidebar-collapsed .sidebar .label-white,
	body.sidebar-collapsed .sidebar .label-gray {
		display: none !important;
	}
	
	html.sidebar-collapsed-global .sidebar .nav-link-container div,
	html[data-sidebar="collapsed"] .sidebar .nav-link-container div,
	body.sidebar-collapsed .sidebar .nav-link-container div {
		display: none !important;
	}
	
	html.sidebar-collapsed-global .sidebar .socials--sidebar,
	html[data-sidebar="collapsed"] .sidebar .socials--sidebar,
	body.sidebar-collapsed .sidebar .socials--sidebar {
		display: none !important;
	}
	
	html.sidebar-collapsed-global .sidebar .w-nav-brand,
	html[data-sidebar="collapsed"] .sidebar .w-nav-brand,
	body.sidebar-collapsed .sidebar .w-nav-brand {
		justify-content: center !important;
		margin-bottom: 20px !important;
	}
	
	html.sidebar-collapsed-global .sidebar .niv-data,
	html[data-sidebar="collapsed"] .sidebar .niv-data,
	body.sidebar-collapsed .sidebar .niv-data {
		justify-content: center !important;
		align-items: center !important;
	}
	
	html.sidebar-collapsed-global .sidebar .niv-image,
	html[data-sidebar="collapsed"] .sidebar .niv-image,
	body.sidebar-collapsed .sidebar .niv-image {
		margin-right: 0 !important;
		margin: 0 auto !important;
	}
	
	html.sidebar-collapsed-global .sidebar .nav-link-container,
	html[data-sidebar="collapsed"] .sidebar .nav-link-container,
	body.sidebar-collapsed .sidebar .nav-link-container {
		justify-content: center !important;
		align-items: center !important;
		padding: 12px 8px !important;
		margin-bottom: 8px !important;
		min-height: 44px !important;
		width: 60px !important;
		margin-left: auto !important;
		margin-right: auto !important;
	}
	
	html.sidebar-collapsed-global .sidebar .nav-link-image,
	html[data-sidebar="collapsed"] .sidebar .nav-link-image,
	body.sidebar-collapsed .sidebar .nav-link-image {
		margin: 0 auto !important;
	}
	
	html.sidebar-collapsed-global .sidebar .w-nav-menu,
	html[data-sidebar="collapsed"] .sidebar .w-nav-menu,
	body.sidebar-collapsed .sidebar .w-nav-menu {
		align-items: center !important;
	}
	
	html.sidebar-collapsed-global .sidebar .sidebar-toggle-button,
	html[data-sidebar="collapsed"] .sidebar .sidebar-toggle-button,
	body.sidebar-collapsed .sidebar .sidebar-toggle-button {
		display: flex !important;
		width: 44px !important;
		height: 44px !important;
		margin-left: auto !important;
		margin-right: auto !important;
		justify-content: center !important;
		align-items: center !important;
		padding: 0 !important;
		margin-bottom: 8px !important;
	}
	html {
		font-family: system-ui, sans-serif;
		background: #13151a;
		background-size: 224px;
	}
	code {
		font-family:
			'Agave Nerd Font',
			ui-monospace,
			SFMono-Regular,
			Menlo,
			Monaco,
			Lucida Console,
			Liberation Mono,
			DejaVu Sans Mono,
			Bitstream Vera Sans Mono,
			Courier New,
			monospace;
	}
</style>
